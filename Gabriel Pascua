CHALLENGE 2
import java.util.Scanner;
//PASCUA GABRIEL P.
//CITCS 1B GROUP B
public class GardenCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // 1. Input: Given Values
        System.out.print("Enter the length of the garden in meters: ");
        double length = scanner.nextDouble();

        System.out.print("Enter the width of the garden in meters: ");
        double width = scanner.nextDouble();

        // 2. Calculations
        // Calculate area
        double area = length * width;

        // Calculate perimeter
        double perimeter = 2 * (length + width);

        // 3. Output
        System.out.println("\nThe length of the garden is: " + length + " meters");
        System.out.println("The width of the garden is: " + width + " meters");
        System.out.println("The area of the garden is: " + area + " square meters");
        System.out.println("The perimeter of the garden is: " + perimeter + " meters");

        scanner.close();
    }
}


CHALLENGE 3

import java.util.Scanner;
PASCUA GABRIEL P.
CITCS 1B GROUP B

public class GroceryShoppingCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input: Asking for price and quantity for 3 different items
        double[] prices = new double[3];
        int[] quantities = new int[3];

        for (int i = 0; i < 3; i++) {
            System.out.print("Enter the price of item " + (i + 1) + ": ");
            prices[i] = scanner.nextDouble();
            
            System.out.print("Enter the quantity of item " + (i + 1) + ": ");
            quantities[i] = scanner.nextInt();
        }

        // Calculations
        double subtotal = 0;
        for (int i = 0; i < 3; i++) {
            subtotal += prices[i] * quantities[i];
        }

        // Applying 5% discount
        double discount = 0.05 * subtotal;
        double discountedAmount = subtotal - discount;

        // Adding 12% sales tax to the discounted amount
        double tax = 0.12 * discountedAmount;
        double finalTotal = discountedAmount + tax;

        // Output: Displaying the results
        System.out.println("\nSubtotal: " + subtotal + " PHP");
        System.out.println("Discount (5%): " + discount + " PHP");
        System.out.println("Discounted Amount: " + discountedAmount + " PHP");
        System.out.println("Tax (12%): " + tax + " PHP");
        System.out.println("Final Total: " + finalTotal + " PHP");

        scanner.close();
    }
}

