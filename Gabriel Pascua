import java.util.Scanner;
//PASCUA GABRIEL P.
//CITCS 1B GROUP B
public class GroceryStoreDiscountCalculator {
    public static void main(String[] args) {
//PASCUA GABRIEL P.
//CITCS 1B GROUP B
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the total amount of your purchase: $");
        double totalAmount = scanner.nextDouble();
        double discount = 0.0;

        // Determine discount based on total amount
        if (totalAmount >= 100) {
            discount = totalAmount * 0.2; // 20% discount
        } else if (totalAmount >= 50) {
            discount = totalAmount * 0.1; // 10% discount
        } else {
            discount = 0.0; // No discount
        }

        double finalAmount = totalAmount - discount;

        System.out.printf("Original Amount: $%.2f%n", totalAmount);
        System.out.printf("Discount: $%.2f%n", discount);
        System.out.printf("Final Amount after Discount: $%.2f%n", finalAmount);

        scanner.close();
    }
}


CHALLENGE 5

import java.util.Scanner;
//PASCUA GABRIEL P.
//CITCS 1B GROUP B
public class RestaurantOrderSystem {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice, quantity;
        double totalAmount = 0;

        while (true) {
            // Display Menu
            System.out.println("MENU");
            System.out.println("1. Burger - PHP 100");
            System.out.println("2. Fries  - PHP 50");
            System.out.println("3. Soda   - PHP 30");
            System.out.println("4. Ice Cream - PHP 45");
            System.out.println("5. Exit");
            System.out.print("Enter the menu number of your choice: ");
            choice = scanner.nextInt();

            if (choice == 5) {
                System.out.println("Exiting...");
                break;
            }

            // Ask for quantity
            System.out.print("Enter the quantity: ");
            quantity = scanner.nextInt();

            switch (choice) {
                case 1:
                    System.out.println("You ordered Burger.");
                    totalAmount = 100 * quantity;
                    break;
                case 2:
                    System.out.println("You ordered Fries.");
                    totalAmount = 50 * quantity;
                    break;
                case 3:
                    System.out.println("You ordered Soda.");
                    totalAmount = 30 * quantity;
                    break;
                case 4:
                    System.out.println("You ordered Ice Cream.");
                    totalAmount = 45 * quantity;
                    break;
                default:
                    System.out.println("Invalid choice! Please choose from the menu.");
                    continue;
            }

            // Display total amount
            System.out.println("Total amount: " + totalAmount + " PHP");
        }

        scanner.close();
    }
}


CHALLENGE 6

import java.util.Scanner;
//PASCUA GABRIEL P.
//CITCS 1B GROUP B
public class ClassroomAttendanceSystem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Step 1: Input the total number of students
        System.out.print("Enter the total number of students: ");
        int totalStudents = scanner.nextInt();

        int presentCount = 0;
        int absentCount = 0;

        // Step 2: Use a loop to ask whether each student is present or absent
        for (int i = 1; i <= totalStudents; i++) {
            System.out.print("Is student " + i + " present? (Y/N): ");
            char attendance = scanner.next().charAt(0);

            // Step 3: Keep count of present and absent students
            if (attendance == 'Y' || attendance == 'y') {
                presentCount++;
            } else if (attendance == 'N' || attendance == 'n') {
                absentCount++;
            } else {
                System.out.println("Invalid input. Please enter 'Y' for present or 'N' for absent.");
                i--; // repeat the current iteration for invalid input
            }
        }

        // Step 4: Display the final counts at the end
        System.out.println("Total present: " + presentCount);
        System.out.println("Total absent: " + absentCount);

        scanner.close();
    }
}


CHALLENGE 7


import java.util.Scanner;
//PASCUA GABRIEL P.
//CITCS 1B GROUP B
public class PasswordValidationSystem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String password;
        boolean isValid = false;

        while (!isValid) {
            System.out.print("Enter your password: ");
            password = scanner.nextLine();

            // Validate the password
            if (isValidPassword(password)) {
                System.out.println("Your password is valid!");
                isValid = true; // Exit the loop if valid
            } else {
                System.out.println("Password must contain at least 8 characters, including one uppercase letter and one number.");
            }
        }
        scanner.close(); // Close the scanner to avoid resource leaks
    }

    // Method to validate the password based on given criteria
    public static boolean isValidPassword(String password) {
        if (password.length() < 8) {
            return false;
        }

        boolean hasUppercase = false;
        boolean hasNumber = false;

        // Check for uppercase letter and number
        for (char c : password.toCharArray()) {
            if (Character.isUpperCase(c)) {
                hasUppercase = true;
            }
            if (Character.isDigit(c)) {
                hasNumber = true;
            }
        }

        // Return true only if both conditions are met
        return hasUppercase && hasNumber;
    }
}
